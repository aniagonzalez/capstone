<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <%= render "shared/submenu"%>
  <h2>Agrega una nueva imagen para tu galería aquí:</h2>

  <section class = "form-container">
    <%= form_for ([@site, @gallery_picture]) do |f| %>
    <p><%= f.label :"Imagen chica"  %>
    <%= f.text_field :image_thumb %></p>
    <p><%= f.label :"Imagen grande" %>
    <%= f.text_field :image_large %></p>
    <p><%= f.label :"Texto alternativo" %>
    <%= f.text_field :image_alt %></p>

    <%= f.submit %>
    <% end %>
  </section>
</div>
