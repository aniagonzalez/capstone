<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h2>Crea un nuevo sitio aquí:</h2>

  <section class = "form-container">
    <%= form_for @site do |f| %>
    <p><%= f.label :Título %>
    <%= f.text_field :title %></p>
    <p><%= f.label :Descripción %>
    <%= f.text_field :description %></p>

    <%= f.submit %>
    <% end %>
  </section>
</div>
